{
  "name": "N予備校パッチ",
  "version": "2.0.1",
  "description": "N予備校で放送画面サイズの変更、スクショボタン追加など",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "images/camera.png",
    "images/fullScreenIcon.png"
  ],
  "permissions": [
    "storage",
    "tabs",
    "*://www.nnn.ed.nico/lessons/*",
    "*://nnn.ed.nico/lessons/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.nnn.ed.nico/lessons/*"
      ],
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/SaveData.js",
        "js/VideoSizeSaveData.js",
        "js/VideoSizeChanger.js",
        "js/ScreenShotSaveData.js",
        "js/ScreenShotCarousel.js",
        "js/FullScreenSaveData.js",
        "js/FullScreenButton.js",
        "js/TextOpenLinkSaveData.js",
        "js/TextOpenLink.js",
        "js/StyleChanger.js",
        "js/ScreenMode.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css",
        "css/carousel.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "N予備校パッチ"
  }
}